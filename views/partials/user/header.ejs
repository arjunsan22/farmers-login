    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Lobster&family=Oswald:wght@200..700&family=Playwrite+AU+SA:wght@100..400&family=Playwrite+PE+Guides&family=Playwrite+VN:wght@100..400&family=Righteous&family=Rubik+Vinyl&display=swap" rel="stylesheet">
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Oswald:wght@200..700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=person" />
    
    <!-- Custom styles -->
    <link href="/css/style.css" rel="stylesheet">

    <style>
      .navbar-nav .nav-link:hover {
  color: #fcfdfe;
}

.navbar .dropdown-menu {
  border-radius: 8px;
}

.navbar .nav-link i:hover {
  color: #ff9d42;
}

.navbar .dropdown-menu a:hover {
  background-color: #239800;
}
 /* Remove dropdown arrow */
#userDropdown::after {
  display: none;
}

/* Style the dropdown on hover */
.dropdown:hover .dropdown-menu {
  display: block;
  margin-top: 0;
  border-radius: 8px;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Adjust padding */
#userDropdownMenu a {
  padding: 8px 16px;
}

.search-bar {
  max-width: 400px;
  width: 100%;
}

.search-input {
  border-radius: 20px;
  border: 1px solid #ced4da;
  padding: 8px 12px;
  font-size: 16px;
}

.search-button {
  border-radius: 20px;
  padding: 8px 16px;
}

.search-input:focus {
  outline: none;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

       
           </style>
           

</head>
<body>
   
      <!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-success fixed-top shadow-sm">
    <div class="container">
      <!-- Brand -->
      <a class="navbar-brand fw-bold" href="/" style="font-family:cursive;color: #ffffff;">
        FARMERS LOGIN
      </a>
  
      <!-- Navbar Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <!-- Navbar Links -->
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a style="font-family:cursive;color: #ffffff;" class="nav-link active" href="/">HOME</a>
          </li>
          <li class="nav-item">
            <a style="font-family:cursive;color: #ffffff;" class="nav-link" href="about.html">BLOG</a>
          </li>
          <li class="nav-item">
            <a style="font-family:cursive;color: #ffffff;" class="nav-link" href="blog.html">SHOP</a>
          </li>
          <li class="nav-item dropdown">
            <a style="font-family:cursive;color: #ffffff;" class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              CATEGORY
            </a>
            <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
              <li><a style="font-family:cursive;color: #120909;" class="dropdown-item" href="portfolio-1-col.html">VEGEES</a></li>
              <li><a style="font-family:cursive;color: #120c0c;" class="dropdown-item" href="portfolio-2-col.html">FRUITS</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a style="font-family:cursive;color: #ffffff;" class="nav-link" href="contact.html">CONTACT</a>
          </li>
        </ul>
  
        <!-- Search Bar -->
        <form class="search-bar d-flex" role="search">
            <input class="form-control me-2 search-input" type="search" placeholder="Search for products..." aria-label="Search">
            <button class="btn btn-outline-success search-button" type="submit">
              <i class="fas fa-search"></i>
            </button>
          </form>
          
  <!-- User Profile Dropdown -->
<% if (locals.user) { %>
    <div class="dropdown" onmouseover="openDropdown()" onmouseout="closeDropdown()">
     <button class="btn ">
        <span class="material-symbols-outlined">
            person
            </span>
     </button>
        
      <ul class="dropdown-menu" id="userDropdownMenu">
         <a style="color: hsl(39, 100%, 55%);" class="nav-link" href="#" id="userDropdown">
       <h6 style="text-transform: uppercase;"> WELCOME <%= user.firstname %> <%= user.lastname %></h6>
      </a>
        <li><a class="dropdown-item" href="/userProfile">PROFILE</a></li>
        <li><a class="dropdown-item" href="/logout">LOGOUT</a></li>
      </ul>
    </div>
  <% } else { %>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/signup">SIGN UP</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login">LOGIN</a>
      </li>
    </ul>
  <% } %>
  
  
        <!-- Wishlist and Cart Icons -->
        <div class="d-flex">
         <button class="btn"> <a style="color: #a70000;" href="wishlist.html" class="nav-link">
            <i  class="fas fa-heart" style="font-size: 24px;"></i>
          </a> </button>
         <button class="btn"> <a style="color: #e7e0e0;" href="cart.html" class="nav-link ms-3">
            <i class="fas fa-shopping-cart" style="font-size: 24px;"></i>
          </a></button>
         
        </div>
      </div>
    </div>
  </nav>
  
    
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFz17fudF5iEqbeKfkSmVFYBgxkbu6iD9tYp6Q2Koz/26pJ30n0ofmAn3y" crossorigin="anonymous"></script>
    <script>function openDropdown() {
        document.getElementById('userDropdownMenu').style.display = 'block';
      }
      
      function closeDropdown() {
        document.getElementById('userDropdownMenu').style.display = 'none';
      }
      </script>
</body>
</html>
