/* Bounce-In Animation */
@keyframes bounceIn {
    0% {
        opacity: 0;
        transform: scale(0.5) translateY(-20px);
    }
    50% {
        opacity: 0.7;
        transform: scale(1.05) translateY(5px);
    }
    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}

/* Pulsing Animation */
@keyframes pulse {
    0% {
        transform: scale(1);
        box-shadow: 0px 4px 8px rgba(255, 75, 43, 0.4);
    }
    50% {
        transform: scale(1.05);
        box-shadow: 0px 6px 12px rgba(255, 75, 43, 0.6);
    }
    100% {
        transform: scale(1);
        box-shadow: 0px 4px 8px rgba(255, 75, 43, 0.4);
