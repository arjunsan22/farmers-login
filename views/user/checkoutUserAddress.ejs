  // Confirmation function using SweetAlert2
  function confirmDelete(event) {
    event.preventDefault(); // Prevent the default behavior (navigating to the link)

    // Show SweetAlert confirmation dialog
    Swal.fire({
      title: 'Are You Adding Another Address?',
      text: "Adding Address",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Yes, Add it!',
      cancelButtonText: 'No, some changes'
    }).then((result) => {
      if (result.isConfirmed) {
        // If user clicks "Yes, delete it!" proceed with the deletion
        window.location.href = event.target.href; // Redirect to the delete URL
      }
    });
  }
</script>
