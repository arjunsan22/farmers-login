                    <button type="button" class="btn btn-secondary" onclick="return resentOTP()" > Resend OTP </button>
                </div>
                <br>
                <% if (locals.message && message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>
            </form>
            <br>
            <br>
