<%- include("../../views/partials/user/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>User Addresses</title>
    <style>
        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
        }

        .btn-sm {
            margin-right: 10px;
        }

        @media (max-width: 768px) {
            .card-body {
                padding: 15px;
            }

            .card-title {
                font-size: 1.1rem;
            }

            .card-text {
                font-size: 0.9rem;
            }

            .btn-sm {
                margin-right: 5px;
            }
        }
        body {
    font-family: 'Poppins', sans-serif;
    background-color: #586470;
    color: #333;
    margin: 0;
    padding: 0;
}

h2 {
    font-weight: 700;
    color: #d9534f; /* Bootstrap danger color */
    text-transform: uppercase;
    letter-spacing: 1.2px;
}

.container {
    max-width: 1100px;
    margin: auto;
    padding: 20px;
}

.card {
    border: 1px solid #ddd;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    transition: transform 0.3s, box-shadow 0.3s;
    overflow: hidden;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
}

.card-body {
    padding: 25px;
    background-color: #fff;
}

.card-title {
    font-size: 1.5rem;
    color: #5a5a5a;
    margin-bottom: 15px;
    font-weight: 600;
}

.card-text {
    line-height: 1.8;
    font-size: 0.95rem;
    color: #555;
}

.btn-sm {
    font-size: 0.85rem;
    padding: 8px 12px;
    border-radius: 4px;
}

.btn-warning {
    background-color: #ffbb33;
    color: #fff;
    border: none;
    transition: background-color 0.3s ease-in-out;
}

.btn-warning:hover {
    background-color: #ffa500;
    color: #fff;
}

.btn-danger {
    background-color: #d9534f;
    color: #fff;
    border: none;
    transition: background-color 0.3s ease-in-out;
}

.btn-danger:hover {
    background-color: #c9302c;
    color: #fff;
}

.text-center p {
    font-size: 1.2rem;
    font-weight: 400;
    color: #666;
    margin-bottom: 20px;
}

a.btn-primary {
    background-color: #5bc0de;
    border-color: #46b8da;
    color: #fff;
    text-transform: uppercase;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
}

a.btn-primary:hover {
    background-color: #31b0d5;
    border-color: #269abc;
}

@media (max-width: 768px) {
    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.3rem;
    }

    .card-text {
        font-size: 0.9rem;
    }

    h2 {
        font-size: 1.8rem;
    }

    .btn-sm {
        padding: 6px 10px;
        font-size: 0.8rem;
    }
}

@media (max-width: 576px) {
    h2 {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.2rem;
    }

    .card-text {
        font-size: 0.85rem;
    }

    .btn-sm {
        padding: 5px 8px;
        font-size: 0.75rem;
    }
}

    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4 text-danger fs-2">MY ADDRESSES</h2>
        
        <% if (userAddress.length === 0) { %>
            <div class="text-center">
                <p>No addresses found.</p>
                <a href="/addUserAddress" class="btn btn-primary">Add Address</a>
            </div>
        <% } else { %>
            <div class="row">
                <% userAddress.forEach((address, index) => { %>
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= address.addressType %></h5>
                                <p class="card-text">
                                    <strong>Name:</strong> <%= address.name %><br>
                                    <strong>City:</strong> <%= address.city %><br>
                                    <strong>Street Mark:</strong> <%= address.StreetMark %><br>
                                    <strong>State:</strong> <%= address.state %><br>
                                    <strong>Pincode:</strong> <%= address.pincode %><br>
                                    <strong>Phone:</strong> <%= address.Phone %><br>
                                    <strong>Second Phone:</strong> <%= address.SecondPhone %><br>
                                    <strong>House No:</strong> <%= address.Houseno %>
                                </p>
                                <a href="/useraddress-Edit/<%= index %>" class="btn btn-warning btn-sm">Edit</a>
                                
                                <a 
                                href="/useraddress-Delete/<%= index %>" 
                                class="btn btn-danger btn-sm" 
                                onclick="return confirmDelete(event)"
                              >
                                Delete
                              </a>
                              
                             
                              
                              
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="text-center mt-3">
                <a href="/addUserAddress" class="btn btn-warning">Add Another Address</a>
                <a href="/userProfile" class="btn btn-warning">Back</a>
                
                <br><br>
            </div>
        <% } %>
    </div>
    <!-- Add this in the <head> or before closing <body> tag -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      // Confirmation function using SweetAlert2
      function confirmDelete(event) {
        event.preventDefault(); // Prevent the default behavior (navigating to the link)
    
        // Show SweetAlert confirmation dialog
        Swal.fire({
          title: 'Are you sure?',
          text: "Removing Address",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonText: 'Yes, delete it!',
          cancelButtonText: 'No, keep it'
        }).then((result) => {
          if (result.isConfirmed) {
            // If user clicks "Yes, delete it!" proceed with the deletion
            window.location.href = event.target.href; // Redirect to the delete URL
          }
        });
      }
    </script>

</body>
</html>
