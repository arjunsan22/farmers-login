<%- include("../../views/partials/user/header") %>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
  <div class="container my-5">
    <h2 class="text-center mb-4">Checkout</h2>
    <div class="card shadow p-4 mb-4">
      <h4>Order Details</h4>
      <p><strong>Product:</strong> <%= product.productname %></p>
      <p><strong>Quantity:</strong> <%= quantity %> kg</p>
      <p><strong>Total Price:</strong> â‚¹<%= (product.salePrice * quantity).toFixed(2) %></p>
    </div>

    <form id="checkoutForm" action="/process-order" method="POST" class="card shadow p-4">
      <input type="hidden" name="productId" value="<%= product._id %>">
      <input type="hidden" name="quantity" value="<%= quantity %>">

      <h4>Choose an Address</h4>
        <div class="row">
          <% addresses.forEach((address, index) => { %>
            <div class="col-md-6 mb-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= address.addressType %></h5>
                  <p class="card-text">
                    <strong>Name:</strong> <%= address.name %><br>
                    <strong>City:</strong> <%= address.city %><br>
                    <strong>Street Mark:</strong> <%= address.StreetMark %><br>
                    <strong>State:</strong> <%= address.state %><br>
                    <strong>Pincode:</strong> <%= address.pincode %><br>
                    <strong>Phone:</strong> <%= address.Phone %><br>
                    <strong>Second Phone:</strong> <%= address.SecondPhone %><br>
                    <strong>House No:</strong> <%= address.Houseno %>
                  </p>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="address" value="<%= address._id %>" id="address<%= index %>" required>
                    <label class="form-check-label" for="address<%= index %>">
                      Select this address
                    </label>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      

      <hr>
      <h4>Add a New Address</h4>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="addressType" class="form-label">Address Type</label>
          <input type="text" class="form-control" id="addressType" name="addressType" placeholder="Home, Office, etc." required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="ArjunSandhya" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="streetMark" class="form-label">Street Mark</label>
          <input type="text" class="form-control" id="streetMark" name="StreetMark" placeholder="Street, Block, etc." required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="city" class="form-label">City</label>
          <input type="text" class="form-control" id="city" name="city" placeholder="City Name" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="state" class="form-label">State</label>
          <input type="text" class="form-control" id="state" name="state" placeholder="State Name" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="pincode" class="form-label">Pincode</label>
          <input type="text" class="form-control" id="pincode" name="pincode" placeholder="Pincode" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="phone" class="form-label">Phone</label>
          <input type="tel" class="form-control" id="phone" name="Phone" placeholder="Phone Number" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="secondPhone" class="form-label">Second Phone</label>
          <input type="tel" class="form-control" id="secondPhone" name="SecondPhone" placeholder="Optional" >
        </div>
        <div class="col-md-6 mb-3">
          <label for="houseNo" class="form-label">House No</label>
          <input type="text" class="form-control" id="houseNo" name="Houseno" placeholder="House Number" required>
        </div>
      </div>

      <hr>
      <div class="mb-3">
        <label for="paymentMethod" class="form-label">Payment Method</label>
        <select class="form-select" id="paymentMethod" name="paymentMethod" required>
          <option value="cod">Cash on Delivery</option>
          <option value="card" disabled>Card Payment (Coming Soon)</option>
        </select>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-success btn-lg">Place Order</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
<%- include("../../views/partials/user/footer") %>