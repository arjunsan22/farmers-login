<%- include("../../views/partials/user/header") %>
<style>
.forgot-password-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background-color: #f8f9fa;
    padding: 20px 0;
}

.otp-card {
    background: white;
    border-radius: 15px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    max-width: 450px;
    width: 100%;
    margin: auto;
}

.otp-header {
    text-align: center;
    margin-bottom: 2rem;
}

.otp-header h3 {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.otp-header p {
    color: #7f8c8d;
    font-size: 0.95rem;
}

.otp-input-group {
    margin-bottom: 1.5rem;
}

.otp-input {
    text-align: center;
    font-size: 1.2rem;
    letter-spacing: 0.5rem;
    padding: 0.75rem;
}

.otp-timer-wrapper {
    display: flex;
    justify-content: center;
    margin: 1.5rem 0;
}

.otp-timer {
    width: 90px;
    height: 70px;
    border-radius: 10%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: 600;
    background-color: #f8f9fa;
    color: #2c3e50;
    transition: all 0.3s ease;
}

.verify-btn {
    background-color: #3498db;
    border: none;
    padding: 12px 0;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}

.verify-btn:hover {
    background-color: #2980b9;
    transform: translateY(-2px);
}

.resend-btn {
    color: #3498db;
    background: none;
    border: none;
    padding: 8px 16px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.resend-btn:disabled {
    color: #95a5a6;
    cursor: not-allowed;
}

.resend-btn:not(:disabled):hover {
    color: #2980b9;
    text-decoration: underline;
}

.alert {
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1rem;
}
</style>

<div style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif" class="forgot-password-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="otp-card">
                    <div class="otp-header">
                        <h3>Email Verification</h3>
                        <p>Enter the OTP sent to your email address</p>
                    </div>
                    
                    <form onsubmit="return validateOtpForm()">
                        <div class="otp-input-group">
                            <input type="text" 
                                   id="otp" 
                                   name="otp" 
                                   class="form-control otp-input" 
                                   maxlength="6"
                                   placeholder="Enter OTP"
                                   required>
                        </div>
                        
                        <div class="otp-timer-wrapper">
                            <div class="otp-timer" id="otpTimer"></div>
                        </div>
                        
                        <button type="submit" class="btn verify-btn btn-primary w-100 mb-3">
                            Verify OTP
                        </button>
                        
                        <div class="text-center">
                            <button type="button" 
                                    id="resendOtpButton" 
                                    class="resend-btn" 
                                    onclick="resendOtp()" 
                                    disabled>
                                Resend OTP
                            </button>
                        </div>
                    </form>
                    
                    <%if(locals.message && message.length > 0){%>
                        <div class="alert alert-danger mt-3">
                            <%=message%>
                        </div>
                    <%}%>
                    
                    <div class="text-center mt-4">
                        <p class="mb-0">
                            Already verified? <a href="/login" class="text-primary">Login now</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../../views/partials/user/footer") %>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

    let otpTimerInterval;
    let timer = 60;

    function showLoadingAlert() {
        return Swal.fire({
            title: 'Processing...',
            text: 'Please wait',
            allowOutsideClick: false,
            showConfirmButton: false,
            willOpen: () => {
                Swal.showLoading();
            }
        });
    }

    function updateTimerColor(percentage) {
        const timerElement = document.getElementById('otpTimer');
        if (percentage > 50) {
            timerElement.style.backgroundColor = '#28a745';
        } else if (percentage > 25) {
            timerElement.style.backgroundColor = '#ffc107';
        } else {
            timerElement.style.backgroundColor = '#dc3545';
        }
    }

    function startOtpTimer() {
        const timerElement = document.getElementById('otpTimer');
        const resendButton = document.getElementById('resendOtpButton');

        resendButton.disabled = true;
        resendButton.style.cursor = 'not-allowed';

        otpTimerInterval = setInterval(() => {
            const minutes = Math.floor(timer / 60);
            const seconds = timer % 60;
            timerElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            updateTimerColor((timer / 60) * 100);

            if (--timer < 0) {
                clearInterval(otpTimerInterval);
                timerElement.textContent = 'Expired';
                timerElement.style.backgroundColor = '#dc3545';
                resendButton.disabled = false;
                resendButton.style.cursor = 'pointer';
                
                // Show expiry notification
                Swal.fire({
                    icon: 'warning',
                    title: 'OTP Expired',
                    text: 'Please click "Resend OTP" to get a new code',
                    timer: 3000,
                    showConfirmButton: false
                });
            }
        }, 1000);
    }

    function validateOtpForm() {
        const otpInput = document.getElementById('otp').value;
        showLoadingAlert();

        $.ajax({
            type: 'POST',
            url: '/password-forgot-verifyotp',
            data: { otp: otpInput },
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'OTP verified successfully',
                        showConfirmButton: false,
                        timer: 1500,
                        willClose: () => {
                            window.location.href = response.redirectUrl;
                        }
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid OTP',
                        text: response.message || 'Please check the OTP and try again',
                        confirmButtonColor: '#3498db'
                    });
                }
            },
            error: function(err) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred. Please try again later.',
                    confirmButtonColor: '#3498db'
                });
            }
        });
        return false;
    }

    function resendOtp() {
        const resendButton = document.getElementById('resendOtpButton');
        if (resendButton.disabled) return;

        showLoadingAlert();

        $.ajax({
            type: 'POST',
            url: '/password-forgot-resendotp',
            success: function(response) {
                if (response.success) {
                    clearInterval(otpTimerInterval);
                    timer = 60;
                    startOtpTimer();
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'OTP Resent!',
                        text: 'A new OTP has been sent to your email',
                        timer: 2000,
                        showConfirmButton: false,
                        position: 'top-end',
                        toast: true
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message || 'Failed to resend OTP. Please try again.',
                        confirmButtonColor: '#3498db'
                    });
                }
            },
            error: function(err) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while resending OTP. Please try again later.',
                    confirmButtonColor: '#3498db'
                });
            }
        });
    }

    initializeOtpTimer();
</script>






