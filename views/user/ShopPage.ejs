<%- include("../../views/partials/user/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2ecc71;
            --background-color: #f8f9fa;
            --text-color: #2c3e50;
            --border-color: #e9ecef;
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .filter-section {
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
            position: sticky;
            top: 20px;
        }

        .filter-title {
            color: var(--primary-color);
            font-size: 1.2rem;
            padding: 15px;
            border-bottom: 2px solid var(--border-color);
            margin-bottom: 0;
        }

        .list-group-item {
            border: none;
            padding: 12px 20px;
            transition: all 0.3s ease;
        }

        .list-group-item:hover {
            background-color: var(--background-color);
            transform: translateX(5px);
        }

        .list-group-item a {
            color: var(--text-color);
            display: flex;
            align-items: center;
            justify-content: space-between;
            text-decoration: none;
        }

        .list-group-item a:hover {
            color: var(--primary-color);
        }

        .product-section {
            padding: 0 15px;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            padding: 20px 0;
        }

        .product-card {
            background: white;
            border: none;
            border-radius: 10px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .product-img-wrapper {
            position: relative;
            padding-top: 100%;
            overflow: hidden;
        }

        .product-img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-img {
            transform: scale(1.05);
        }

        .product-info {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .product-title {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--text-color);
        }

        .product-price {
            color: var(--primary-color);
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 12px;
        }

        .btn-cart {
            background-color: var(--secondary-color);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: auto;
        }

        .btn-cart:hover {
            background-color: #27352d;
            transform: translateY(-2px);
        }

        .btn-cart i {
            margin-right: 8px;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
        }

        @media (max-width: 991px) {
            .filter-section {
                margin-bottom: 20px;
            }
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .filter-section {
                position: relative;
                top: 0;
                margin-bottom: 15px;
            }
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 15px;
            }
            .product-card {
                margin-bottom: 0;
            }
        }

        @media (max-width: 576px) {
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
                gap: 10px;
            }
            .product-info {
                padding: 10px;
            }
            .product-title {
                font-size: 0.9rem;
            }
            .btn-cart {
                padding: 6px 12px;
                font-size: 0.9rem;
            }
        }

        /* Animation */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .product-card {
            animation: fadeIn 0.6s ease-out;
        }
        .filter-section {
            background: linear-gradient(145deg, #ffffff, #f8f9fa);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.1);
            backdrop-filter: blur(4px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            margin-bottom: 20px;
            position: sticky;
            top: 20px;
            animation: slideInFilter 0.8s ease-out;
            transform-origin: top;
        }

        @keyframes slideInFilter {
            0% {
                opacity: 0;
                transform: translateX(-50px) scale(0.95);
            }
            100% {
                opacity: 1;
                transform: translateX(0) scale(1);
            }
        }

        .filter-title {
            color: var(--primary-color);
            font-size: 1.3rem;
            font-weight: 600;
            padding: 20px;
            text-align: center;
            letter-spacing: 1px;
            border-bottom: 2px solid rgba(52, 152, 219, 0.1);
            position: relative;
            overflow: hidden;
            animation: glowText 2s infinite alternate;
        }

        @keyframes glowText {
            from { text-shadow: 0 0 0 rgba(52, 152, 219, 0); }
            to { text-shadow: 0 0 10px rgba(52, 152, 219, 0.3); }
        }

        .filter-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            animation: borderFlow 2s infinite;
        }

        @keyframes borderFlow {
            0% { transform: translateX(-100%); }
            50% { transform: translateX(0); }
            100% { transform: translateX(100%); }
        }

        /* Category Section Styling */
        .p-3 {
            padding: 1.5rem !important;
            animation: fadeInUp 0.6s ease-out forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h6 {
            color: var(--text-color);
            font-weight: 600;
            margin-bottom: 1rem;
            position: relative;
            padding-left: 15px;
        }

        h6::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 4px;
            height: 100%;
            background: var(--primary-color);
            border-radius: 4px;
        }

        .form-check {
            margin: 10px 0;
            padding-left: 30px;
            transition: all 0.3s ease;
        }

        .form-check:hover {
            transform: translateX(5px);
            background: linear-gradient(to right, rgba(52, 152, 219, 0.05), transparent);
            border-radius: 6px;
        }

        .form-check-input {
            border-color: var(--primary-color);
            transition: all 0.3s ease;
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            animation: checkPop 0.4s ease-out;
        }

        @keyframes checkPop {
            0% { transform: scale(0.8); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }

        .form-check-label {
            color: var(--text-color);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .form-check:hover .form-check-label {
            color: var(--primary-color);
        }

        /* Sort Filter Styling */
        .form-select {
            border: 2px solid rgba(52, 152, 219, 0.2);
            border-radius: 8px;
            padding: 10px 15px;
            transition: all 0.3s ease;
            background-color: rgba(255, 255, 255, 0.8);
            cursor: pointer;
        }

        .form-select:hover, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
            transform: translateY(-2px);
        }

        /* Responsive Animations */
        @media (max-width: 768px) {
            .filter-section {
                animation: slideInFromTop 0.6s ease-out;
            }

            @keyframes slideInFromTop {
                from {
                    opacity: 0;
                    transform: translateY(-30px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        }
        .toast-container {
            z-index: 1055;
        }
        .toast {
            opacity: 0;
            transform: translateY(-100%);
            transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
        }
        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }
        .toast-header {
            background-color: #343a40;
            color: #fff;
        }
        .toast-body {
            background-color: #9f211d;
            color: #fff;
        }
        .wishlist-button.active {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Filter Section -->

            <aside class="col-lg-3 col-md-4">
                <div class="filter-section">
                    <h5 class="filter-title">FILTERS</h5>

                     <!-- Search Bar -->
                     <div class="p-3">
                        <h6 class="mb-3">Search Products</h6>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search..." value="<%= searchTerm %>">
                    </div>

                    <div class="list-group">
                        <!-- Category Filter -->
                        <div class="p-3">
                            <h6 class="mb-3">Categories</h6>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="category" id="allCategories" value="" <%= !selectedCategory ? 'checked' : '' %>>
                                <label class="form-check-label" for="allCategories">All Categories</label>
                            </div>
                            <% category.forEach(cat => { %>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="category" id="<%= cat.name %>" 
                                           value="<%= cat.name %>" <%= selectedCategory === cat.name ? 'checked' : '' %>>
                                    <label class="form-check-label" for="<%= cat.name %>"><%= cat.name %></label>
                                </div>
                            <% }); %>
                        </div>

                        <!-- Sort Filter -->
                        <div class="p-3">
                            <h6 class="mb-3">Sort By</h6>
                            <select class="form-select" id="sortSelect">
                                <option value="" <%= !selectedSort ? 'selected' : '' %>>Featured</option>
                                <option value="priceLowToHigh" <%= selectedSort === 'priceLowToHigh' ? 'selected' : '' %>>Price: Low to High</option>
                                <option value="priceHighToLow" <%= selectedSort === 'priceHighToLow' ? 'selected' : '' %>>Price: High to Low</option>
                                <option value="newArrivals" <%= selectedSort === 'newArrivals' ? 'selected' : '' %>>New Arrivals</option>
                                <option value="aToZ" <%= selectedSort === 'aToZ' ? 'selected' : '' %>>A - Z</option>
                                <option value="zToA" <%= selectedSort === 'zToA' ? 'selected' : '' %>>Z - A</option>
                            </select>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Products Section -->
            <main class="col-lg-9 col-md-8">
                <div class="product-grid">
                    <% if (products && products.length > 0) { %>
                        <% for(let i=0; i<products.length; i++) { %>
                            <div class="product-card">
                                <a href="/productDetails/<%= products[i]._id %>" class="text-decoration-none">
                                    <div class="product-img-wrapper">
                                        <img src="/uploads/product-images/<%=products[i].productImage[0]%>" 
                                             class="product-img" 
                                             alt="<%=products[i].productname%>">
                                    </div>
                                    
                                    <div class="product-info">
                                        <h5 class="product-title"><%=products[i].productname%></h5>
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="text-warning">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star-half-alt"></i>
                                            </div>
                                            <small class="ms-2 text-muted">(4.5)</small>
                                        </div>
                                        <p class="product-price">₹<%=products[i].salePrice%></p>
                                        <p>
                                            <% if (products[i].quantity > 5) { %>
                                              <p class="text-success"><%= products[i].quantity %> kg available</p>  
                                            <% } else if (products[i].quantity <= 5 && products[i].quantity != 0) { %>
                                                <span class="text-danger">Buy now only <%= products[i].quantity %> kg left</span>
                                            <% } else if(products[i].quantity == 0 || products[i].quantity <0) { %>
                                                <span class="text-danger">Out of Stock</span>
                                            <% } %>
                                        </p>
                                        <div id="wishlistButton" class="position-absolute top-0 end-0 p-2">
                                            <button class="btn btn-outline-danger btn-sm add-to-wishlist" data-product-id="<%= products[i]._id%>">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </div>                                    </div>
                                </a>
                                <div class="product-info pt-0">
                                    
                                </div>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="col-12 text-center">
                            <h3>No products available</h3>
                        </div>
                    <% } %>
                    
                </div>
                <!-- Pagination Section -->
<div class="pagination-container">
    <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>&sortBy=<%= selectedSort %>&search=<%= searchTerm %>" class="pagination-link">Previous</a>
    <% } else { %>
        <span class="pagination-link disabled">Previous</span>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>&category=<%= selectedCategory %>&sortBy=<%= selectedSort %>&search=<%= searchTerm %>" 
           class="pagination-link <%= i === currentPage ? 'active' : '' %>">
           <%= i %>
        </a>
    <% } %>

    <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>&sortBy=<%= selectedSort %>&search=<%= searchTerm %>" class="pagination-link">Next</a>
    <% } else { %>
        <span class="pagination-link disabled">Next</span>
    <% } %>
</div>

            </main>
            
        </div>
        
    </div>


    <script>
 function debounce(func, delay) {
        let timeout;
        return function(...args) {
            clearTimeout(timeout);
            timeout = setTimeout(() => func(...args), delay);
        };
    }

        // handle category and sort filter changes//
        document.querySelectorAll('input[name="category"]').forEach(radio => {
            radio.addEventListener('change', updateFilters);
        });

        document.getElementById('sortSelect').addEventListener('change', updateFilters);
        // document.getElementById('searchInput').addEventListener('input', updateFilters);

        function updateFilters() {
            const selectedCategory = document.querySelector('input[name="category"]:checked').value;
            const selectedSort = document.getElementById('sortSelect').value;

            const searchQuery = document.getElementById('searchInput').value.trim();
            
            let url = new URL(window.location.href);
            url.searchParams.set('page', '1'); // Reset to first page when filters change
            
            if (selectedCategory) {
                url.searchParams.set('category', selectedCategory);
            } else {
                url.searchParams.delete('category');
            }
            
            if (selectedSort) {
                url.searchParams.set('sortBy', selectedSort);
            } else {
                url.searchParams.delete('sortBy');
            }

            if (searchQuery) {
                url.searchParams.set('search', searchQuery);
            } else {
                url.searchParams.delete('search');
            }
            
            window.location.href = url.toString();
        }


    // attach the debounced updateFilters to the search input//
    const debouncedUpdateFilters = debounce(updateFilters, 1000); // 500ms delay//
    document.getElementById('searchInput').addEventListener('input', debouncedUpdateFilters);

  

    </script>

