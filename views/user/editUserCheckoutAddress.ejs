<%- include("../../views/partials/user/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Edit Address</title>
    <style>
        /* Add custom styles if necessary */
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4 text-primary">EDIT ADDRESS</h2>
        <form action="/updateCheckoutAddress/<%=index %>" method="POST" onsubmit="return validateForm()">
            <!-- Address Type -->
            <div class="mb-3">
                <label for="addressType" class="form-label">Address Type</label>
                <input type="text" class="form-control" id="addressType" name="addressType" value="<%= address.addressType %>" required>
            </div>
            
            <!-- Name -->
            <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= address.name %>" required>
            </div>
            
            <!-- City -->
            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" value="<%= address.city %>" required>
            </div>
            
            <!-- Street Mark -->
            <div class="mb-3">
                <label for="StreetMark" class="form-label">Street Mark</label>
                <input type="text" class="form-control" id="StreetMark" name="StreetMark" value="<%= address.StreetMark %>" required>
            </div>
            
            <!-- State -->
            <div class="mb-3">
                <label for="state" class="form-label">State</label>
                <input type="text" class="form-control" id="state" name="state" value="<%= address.state %>" required>
            </div>
            
            <!-- Pincode -->
            <div class="mb-3">
                <label for="pincode" class="form-label">Pincode</label>
                <input type="number" class="form-control" id="pincode" name="pincode" value="<%= address.pincode %>" required>
            </div>
            
            <!-- Phone -->
            <div class="mb-3">
                <label for="Phone" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="Phone" name="Phone" value="<%= address.Phone %>" required>
            </div>
            
            <!-- Second Phone -->
            <div class="mb-3">
                <label for="SecondPhone" class="form-label">Secondary Phone Number</label>
                <input type="text" class="form-control" id="SecondPhone" name="SecondPhone" value="<%= address.SecondPhone %>" required>
            </div>
            
            <!-- House Number -->
            <div class="mb-3">
                <label for="Houseno" class="form-label">House Number</label>
                <input type="text" class="form-control" id="Houseno" name="Houseno" value="<%= address.Houseno %>" required>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-success">Update Address</button>
                <a href="/checkout" class="btn btn-danger">Cancel</a>
                <br><br>
            </div>
        </form>
    </div>
    
    <!-- Validation Script -->
    <script>
        function validateForm() {
            const addressType = document.getElementById("addressType").value.trim();
            const name = document.getElementById("name").value.trim();
            const city = document.getElementById("city").value.trim();
            const StreetMark = document.getElementById("StreetMark").value.trim();
            const state = document.getElementById("state").value.trim();
            const pincode = document.getElementById("pincode").value.trim();
            const Phone = document.getElementById("Phone").value.trim();
            const SecondPhone = document.getElementById("SecondPhone").value.trim();
            const Houseno = document.getElementById("Houseno").value.trim();

            const phoneRegex = /^[0-9]{10}$/; // Validate 10-digit phone numbers
            const pincodeRegex = /^[0-9]{6}$/; // Validate 6-digit pincode

            if (!addressType) {
                alert("Address Type is required.");
                return false;
            }

            if (!name) {
                alert("Full Name is required.");
                return false;
            }

            if (!city) {
                alert("City is required.");
                return false;
            }

            if (!StreetMark) {
                alert("Street Mark is required.");
                return false;
            }

            if (!state) {
                alert("State is required.");
                return false;
            }

            if (!pincode || !pincodeRegex.test(pincode)) {
                alert("Enter a valid 6-digit Pincode.");
                return false;
            }

            if (!Phone || !phoneRegex.test(Phone)) {
                alert("Enter a valid 10-digit Primary Phone Number.");
                return false;
            }

            if (!SecondPhone || !phoneRegex.test(SecondPhone)) {
                alert("Enter a valid 10-digit Secondary Phone Number.");
                return false;
            }

            if (!Houseno) {
                alert("House Number is required.");
                return false;
            }

            // If all validations pass
            return true;
        }
    </script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<%- include("../../views/partials/user/footer") %>
