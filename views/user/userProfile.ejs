<%- include("../../views/partials/user/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-12 mb-3">
            <div class="card shadow-lg p-4">
                <h4 class="text-center mb-4">User Options</h4>
                <div class="d-grid gap-3">
                    <a href="/userProfile" class="btn btn-success text-white text-decoration-none">Dashboard</a>
                    <a href="/order-history" class="btn btn-success text-white text-decoration-none">Order History</a>
                    <a href="/wishlist" class="btn btn-success text-white text-decoration-none">Wishlist</a>
                    <a href="/cart" class="btn btn-success-white text-decoration-none">Shopping Cart</a>
                    <a href="/settings" class="btn btn-success text-white text-decoration-none">Settings</a>
                    <a href="/logout" class="btn btn-success text-white text-decoration-none">Log-out</a>
                </div>
            </div>
        </div>

        <!-- Main Profile Section -->
        
        <div class="col-md-9 col-12">
          <br>
          <br>
            <div class="container text-center">
                <img src="<%= user.profilePicture || '/images/default-profile.png' %>" alt="Profile Picture" class="img-fluid rounded-circle mb-4" style="width: 150px; height: 150px;">
              <marquee >  <h1 class="mb-4 text-secondary">USER PROFILE</h1></marquee>
                <div class="text-start">
                    <p><strong>First Name:</strong> <%= user.firstname %></p>
                    <p><strong>Last Name:</strong> <%= user.lastname %></p>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Phone:</strong> <%= user.phone || 'N/A' %></p>
                </div>
                <br>
                <div class="d-grid gap-2 d-md-block">
                    <a href="/profile/edit" class="btn btn-warning">Edit Profile</a>
                    <a href="/useraddress" class="btn btn-warning">Address</a>
                    <a href="/changeEmail" class="btn btn-warning">Change Email</a>
                    <a href="/changePassword" class="btn btn-warning">Change Password</a>
                </div>
                <form action="/profile/uploadPicture" method="POST" enctype="multipart/form-data" class="mt-3">
                    <label for="profilePicture" class="form-label">Upload Profile Picture</label>
                    <input type="file" name="profilePicture" id="profilePicture" class="form-control mb-3">
                    <button type="submit" class="btn btn-danger">Upload Picture</button>
                    <br><br>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%- include("../../views/partials/user/footer") %>