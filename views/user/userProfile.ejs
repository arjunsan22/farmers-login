    <style>
        :root {
            --primary-color: #198754;
            --secondary-color: #ffc107;
            --text-color: #333;
        }

        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            animation: fadeIn 0.6s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideIn {
            from { transform: translateY(30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .container-fluid { padding: 2rem; }
        
        /* Card Styles */
.card {
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s ease;
    animation: slideIn 0.5s ease-out;
    padding: 20px;
}

.card:hover {
    transform: translateY(-5px); /* Slight lift on hover */
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
}

/* Title Animation */
.title {
    font-family: 'Cursive', sans-serif;
    font-size: 1.5rem;
    color: #4caf50;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    animation: glowText 2s infinite alternate;
}

/* Button Animations */
.btn-animate {
    font-size: 1rem;
    border-radius: 10px;
    transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
}

.btn-animate:hover {
    transform: translateY(-3px) scale(1.05); /* Pop-out on hover */
    background-color: #388e3c;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
}

/* Slide-In Animation */
@keyframes slideIn {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Glow Text Animation */
@keyframes glowText {
    0% {
        color: #4caf50;
        text-shadow: 0 0 5px #4caf50, 0 0 10px #4caf50;
    }
    100% {
        color: #81c784;
        text-shadow: 0 0 10px #81c784, 0 0 20px #81c784;
    }
}


        .btn-success {
            background: linear-gradient(145deg, var(--primary-color), #146c43);
            border: none;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(25, 135, 84, 0.3);
        }

        .text-secondary {
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            animation: slideIn 0.8s ease-out;
        }

        .text-start {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
            animation: slideIn 0.6s ease-out;
        }

        .text-start p {
            margin: 1rem 0;
            padding: 0.8rem;
            border-radius: 8px;
            transition: all 0.3s;
            animation: slideIn 0.6s ease-out;
        }

        .text-start p:hover {
            background: rgba(25, 135, 84, 0.05);
            transform: translateX(10px);
        }

        .btn-warning {
            background: var(--secondary-color);
            border: none;
            margin: 0.5rem;
            transition: all 0.3s;
            animation: fadeIn 0.5s ease-out;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        }

        @media (max-width: 768px) {
            .container-fluid { padding: 1rem; }
            .col-md-3 { margin-bottom: 2rem; }
            .text-start { padding: 1.5rem; }
            .btn-warning {
                margin: 0.3rem;
                display: block;
                width: 100%;
            }
            .d-grid.gap-3 { gap: 0.8rem !important; }
        }

        @media (max-width: 576px) {
            .container-fluid { padding: 0.5rem; }
            .card { border-radius: 10px; }
            .text-start { padding: 1rem; }
            h1 { font-size: 1.8rem; }
        }

        h1.mb-4.text-secondary {
            display: inline-block;
            animation: slideInTitle 1s ease-out, glowText 2s infinite alternate;
        }

        @keyframes slideInTitle {
            from { transform: translateX(-100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        @keyframes glowText {
            from { text-shadow: 0 0 0 rgba(25, 135, 84, 0); }
            to { text-shadow: 0 0 10px rgba(25, 135, 84, 0.3); }
        }
