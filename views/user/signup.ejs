<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .gradient-custom {
            min-height: 100vh;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 2rem 1rem;
        }

        .signup-container {
            max-width: 500px;
            margin: 2rem auto;
            background: rgba(255, 255, 255, 0.95);
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease;
        }

        .signup-container:hover {
            transform: translateY(-5px);
        }

        .form-control {
            border: 2px solid #e1e1e1;
            border-radius: 12px;
            padding: 0.8rem 1rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

        .form-control:focus {
            border-color: #036635;
            box-shadow: 0 0 0 0.2rem rgba(3, 102, 53, 0.15);
            background: #ffffff;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }

        .btn-primary {
            background: #036635;
            border: none;
            border-radius: 12px;
            padding: 12px 20px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(3, 102, 53, 0.2);
        }

        .btn-primary:hover {
            background: #024825;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(3, 102, 53, 0.3);
        }

        .signup-box {
            border-top: 2px solid #f1f1f1;
            margin-top: 2rem;
            padding-top: 1.5rem;
        }

        .social-btns {
            margin: 1rem 0;
        }

        .social-btns img {
            transition: transform 0.3s ease;
            border-radius: 8px;
        }

        .social-btns img:hover {
            transform: scale(1.05);
        }

        .error-message {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            animation: fadeIn 0.3s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Custom styling for the heading */
        .signup-heading {
            color: #036635;
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
            letter-spacing: 2px;
            margin-bottom: 2rem;
            text-align: center;
            position: relative;
        }

        .signup-heading::after {
            content: '';
            display: block;
            width: 60px;
            height: 4px;
            background: #036635;
            margin: 0.5rem auto;
            border-radius: 2px;
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .signup-container {
                margin: 1rem auto;
                padding: 1.5rem;
            }

            .signup-heading {
                font-size: 2rem;
            }
        }
        
    </style>


</head>
<body class="gradient-custom">

    <div class="signup-container">
       
        <h2 
                style="color:#036635; 
                       font-family: 'Poppins', sans-serif; 
                       font-size: 2.5rem; 
                       font-weight:bolder; 
                       text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); 
                       letter-spacing: 2px;" 
                class="text-center mb-4">
              SIGN UP
              </h2>
        <form action="/signup" method="POST" onsubmit="return validateForm()">
            <div class="mb-3">
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" class="form-control" id="first_name" name="firstname" required>
            </div>

            <div class="mb-3">
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="last_name" name="lastname" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>

            <div class="mb-3">
                <label for="confirm_password" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirm_password" name="confirmpassword" required>
            </div>
    

            <div class="mb-3">
                <label for="phone_no" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="phone" required>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
        <% if (typeof message !== 'undefined' && message) { %>
            <h4 style="color: red; text-align: center;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;" >
                <%= message %></h4>
        <% } %>

        <div class="signup-box" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 176px;">
            <div class="mt-2px">
              <p style="text-align: center;">or sign up with</p>
            </div>
            <div class="social-btns">
              <a href="/auth/google" class="btn">
                <img 
                  src="/images/googlesignuppic.PNG"
                  style="width: 222px; height: 47px"
                />
              </a>
            </div>
          </div>
          
<div>
    
<br>
<br>
          <p style="text-align: center;">   <a href="/login" class="text-decoration-none">
                If you have a account ? <strong> SINGN IN</strong></p> 
</div>
        
    </div>
  
    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

<!-- my validation -->
<script>
    function validateForm() {
        let isValid = true;

        // Clear previous error messages
        document.querySelectorAll(".error-message").forEach(msg => msg.remove());

        // First Name Validation
        const firstName = document.getElementById("first_name");
        const firstNameValue = firstName.value.trim();
        if (!/^[A-Za-z]+$/.test(firstNameValue)) {
            showError(firstName, "First name must contain only letters and no spaces.");
            isValid = false;
        }

        // Last Name Validation
        const lastName = document.getElementById("last_name");
        const lastNameValue = lastName.value.trim();
        if (!/^[A-Za-z]+$/.test(lastNameValue)) {
            showError(lastName, "Last name must contain only letters and no spaces.");
            isValid = false;
        }

        // Email Validation
        const email = document.getElementById("email");
        const emailValue = email.value.trim();
        const emailPattern = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;
        if (!emailPattern.test(emailValue)) {
            showError(email, "Please enter a valid email ending with @gmail.com.");
            isValid = false;
        }

        // Password Validation
        const password = document.getElementById("password");
        const passwordValue = password.value;
        const passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@#$%^&+=]).{8,}$/;
        if (!passwordPattern.test(passwordValue)) {
            showError(password, "Password must be at least 8 characters long and include letters, numbers, and symbols.");
            isValid = false;
        }

        // Confirm Password Validation
        // const confirmPassword = document.getElementById("confirm_password");
        // const confirmPasswordValue = confirmPassword.value;
        // if (confirmPasswordValue !== passwordValue) {
        //     showError(confirmPassword, "Passwords do not match.");
        //     isValid = false;
        // }

        // Phone Number Validation
        const phone = document.getElementById("phone");
        const phoneValue = phone.value.trim();
        if (!/^\d{10}$/.test(phoneValue)) {
            showError(phone, "Phone number must be exactly 10 digits.");
            isValid = false;
        }

        return isValid;
    }

    function showError(input, message) {
        const error = document.createElement("div");
        error.className = "error-message text-danger mt-1";
        error.innerText = message;
        input.parentElement.appendChild(error);
    }
</script>


</body>
</html>
