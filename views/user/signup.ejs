<body class="gradient-custom">
 
    <div class="signup-container">
       
        <h2 
                style="color:#ffffff; 
                       font-family: 'Poppins', sans-serif; 
                       font-size: 2.5rem; 
                       font-weight:bolder; 
                       text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); 
                       letter-spacing: 2px;" 
                class="text-center mb-4 ">
              SIGN UP
              <img src="/images/tractor.png" 
              alt="Farmers Login Logo" 
              style="height: 52px; width: auto; object-fit: contain;">
              </h2>
              
        <form action="/signup" method="POST" onsubmit="return validateForm()">
            <div class="mb-3">
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" class="form-control" id="first_name" name="firstname" >
            </div>

            <div class="mb-3">
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="last_name" name="lastname" >
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" >
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" >
            </div>

            <div class="mb-3">
                <label for="confirm_password" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirm_password" name="confirmpassword" >
            </div>
    

            <div class="mb-3">
                <label for="phone_no" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="phone" >
            </div>
            <div class="mb-3">
                <label for="referral_code" class="form-label">Have a Referral Code? (Optional)</label>
                <input type="text" class="form-control" id="referral_code" name="referralCode" placeholder="Enter referral code">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
        <% if (typeof message !== 'undefined' && message) { %>
            <h4 style="color: red; text-align: center;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;" >
                <%= message %></h4>
        <% } %>

        <div class="signup-box" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 176px;">
            <div class="mt-2px">
              <p style="text-align: center;color: #c3cfe2;">or sign up with</p>
            </div>
            <div class="social-btns">
              <a href="/auth/google" class="btn">
                <img 
                  src="/images/googlesignuppic.PNG"
                  style="width: 222px; height: 47px"
                />
              </a>
            </div>
          </div>
          
<div>
    
<br>
<br>
          <p style="text-align: center;">   <a href="/login" class="text-decoration-none">
                If you have a account ? <strong> Sign In</strong></p> 
</div>
        
    </div>
  
    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

<!-- my validation -->
<script>
    function validateForm() {
        let isValid = true;

        // Clear previous error messages
        document.querySelectorAll(".error-message").forEach(msg => msg.remove());

        // First Name Validation
        const firstName = document.getElementById("first_name");
        const firstNameValue = firstName.value.trim();
        if (!/^[A-Za-z]+$/.test(firstNameValue)) {
            showError(firstName, "First name must contain only letters and no spaces.");
            isValid = false;
        }

        // Last Name Validation
        const lastName = document.getElementById("last_name");
        const lastNameValue = lastName.value.trim();
        if (!/^[A-Za-z]+$/.test(lastNameValue)) {
            showError(lastName, "Last name must contain only letters and no spaces.");
            isValid = false;
        }

        // Email Validation
        const email = document.getElementById("email");
        const emailValue = email.value.trim();
        const emailPattern = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;
        if (!emailPattern.test(emailValue)) {
            showError(email, "Please enter a valid email ending with @gmail.com.");
            isValid = false;
        }

        // Password Validation
        const password = document.getElementById("password");
        const passwordValue = password.value;
        const passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@#$%^&+=]).{8,}$/;
        if (!passwordPattern.test(passwordValue)) {
            showError(password, "Password must be at least 8 characters long and include letters, numbers, and symbols.");
            isValid = false;
        }

        // Confirm Password Validation
        // const confirmPassword = document.getElementById("confirm_password");
        // const confirmPasswordValue = confirmPassword.value;
        // if (confirmPasswordValue !== passwordValue) {
        //     showError(confirmPassword, "Passwords do not match.");
        //     isValid = false;
        // }

        // Phone Number Validation
        const phone = document.getElementById("phone");
        const phoneValue = phone.value.trim();
        if (!/^\d{10}$/.test(phoneValue)) {
            showError(phone, "Phone number must be exactly 10 digits.");
            isValid = false;
        }

        return isValid;
    }

    function showError(input, message) {
        const error = document.createElement("div");
        error.className = "error-message text-danger mt-1";
        error.innerText = message;
        input.parentElement.appendChild(error);
    }
</script>


</body>
</html>
