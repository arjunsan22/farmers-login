<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Gradient background */
        .gradient-custom {
            /* fallback for old browsers */
    background-image: url('/images/newsignupback.jpg');
background-repeat: no-repeat;
background-size: cover;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to bottom right, rgb(54, 93, 9), rgba(245, 87, 108, 1));

            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      
        }

        /* Centering the sign-up container */
        .signup-container {
            max-width: 500px;
            margin: 50px auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .signup-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
        }

        .form-control {
            border-radius: 10px;
        }

        /* For responsiveness on small devices */
        @media (max-width: 576px) {
            .signup-container {
                margin-top: 20px;
                padding: 20px;
            }

            .btn-primary {
                padding: 10px;
            }
        }

        .card-registration .select-input.form-control[readonly]:not([disabled]) {
            font-size: 1rem;
            line-height: 2.15;
            padding-left: .75em;
            padding-right: .75em;
        }
        .card-registration .select-arrow {
            top: 13px;
        }
        
    </style>


</head>
<body class="gradient-custom">

    <div class="signup-container">
       
        <h2 
                style="color:#036635; 
                       font-family: 'Poppins', sans-serif; 
                       font-size: 2.5rem; 
                       font-weight:bolder; 
                       text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); 
                       letter-spacing: 2px;" 
                class="text-center mb-4">
              SIGN UP
              </h2>
        <form action="/signup" method="POST" onsubmit="return validateForm()">
            <div class="mb-3">
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" class="form-control" id="first_name" name="firstname" required>
            </div>

            <div class="mb-3">
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="last_name" name="lastname" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>

            <div class="mb-3">
                <label for="confirm_password" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirm_password" name="confirmpassword" required>
            </div>
    

            <div class="mb-3">
                <label for="phone_no" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="phone" required>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
        <% if (typeof message !== 'undefined' && message) { %>
            <h4 style="color: red; text-align: center;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;" >
                <%= message %></h4>
        <% } %>

        <div class="signup-box" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 176px;">
            <div class="mt-2px">
              <p style="text-align: center;">or sign up with</p>
            </div>
            <div class="social-btns">
              <a href="/auth/google" class="btn">
                <img 
                  src="/images/googlesignuppic.PNG"
                  style="width: 222px; height: 47px"
                />
              </a>
            </div>
          </div>
          
<div>
    
<br>
<br>
          <p style="text-align: center;">   <a href="/login" class="text-decoration-none">
                If you have a account ? <strong> SINGN IN</strong></p> 
</div>
        
    </div>
  
    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

<!-- my validation -->

<script>
    function validateForm() {
        // First Name Validation//
        const firstName = document.getElementById("first_name").value.trim();
        if (!/^[A-Za-z]+$/.test(firstName)) {
            alert("First name must contain only letters, no spaces or symbols.");
            return false;
        }
    
        // Last Name Validation
        const lastName = document.getElementById("last_name").value.trim();
        if (!/^[A-Za-z]+$/.test(lastName)) {
            alert("Last name must contain only letters, no spaces or symbols.");
            return false;
        }
    
        // Email Validation
        const email = document.getElementById("email").value.trim();
        const emailPattern = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;
        if (!emailPattern.test(email)) {
            alert("Please enter a valid email address ending with @gmail.com.");
            return false;
        }
    
        // Password Validation
        const password = document.getElementById("password").value;
        const passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@#$%^&+=]).{8,}$/;
        if (!passwordPattern.test(password)) {
            alert("Password must be at least 8 characters long and include letters, numbers, and symbols.");
            return false;
        }
    
        
        // Phone Number Validation
        const phone = document.getElementById("phone").value.trim();
        if (!/^\d{10}$/.test(phone)) {
            alert("Phone number must be exactly 10 digits and contain only numbers.");
            return false;
        }
    
        return true; // If all validations pass
    }
    </script>

</body>
</html>
